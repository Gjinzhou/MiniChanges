/**app.wxss**/
page {
  background-color: #ededed;
}
.pageWrap {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.compassTitle {
  display: flex;
  align-items: center;
  padding-right: 20rpx;
}
/**index.wxss**/
.titleWrap {
  padding: 80rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 400;
}

.description {
  font-size: 26rpx;
  margin-top: 10rpx;
}

.pageContent {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menuText {
  flex: 1;
  font-size: 36rpx;
}

.menuItem {
  width: 580rpx;
  height: 140rpx;
  display: flex;
  padding: 0 40rpx;
  align-items: center;
  background-color: white;
  margin-bottom: 20rpx;
}

.menuIcon {
  width: 50rpx;
  height: 50rpx;
}
